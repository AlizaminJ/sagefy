/*
---
title: Buttons
description: Buttons are one of the most recognized elements of web design. Sagefy provides buttons in a variety of styles. The modifiers are based on role, not appearance. In most places, where there are multiple buttons, one and only one button should be emphasized.
elements:
    - button
    - a.button
    - .button-group (wrapper)
modifiers:
    - Roles
        - accent
        - good
        - bad
        - (base)
    - disabled
example: |
    <ul class="unstyled">
        <li>
            <button class="button--accent">
                Accent
            </button>

            Navigation, Next
        </li>
        <li>
            <button class="button--good">
                Secondary
            </button>

            Success, Accept
        </li>
        <li>
            <button class="button--bad">
                Danger
            </button>

            Error, Delete
        </li>
        <li>
            <button class="button">
                Cancel
            </button>

            Escape, Previous, Back, Information
        </li>
    </ul>

    <ul class="inline">
        <li>
            <button class="button--accent">
                Next Page
                <i class="fa fa-chevron-right"></i>
            </button>
        </li>
        <li>
            <button class="button--good">
                <i class="fa fa-edit"></i>
                Edit
            </button>
        </li>
        <li>
            <button class="button--bad">
                <i class="fa fa-trash-o"></i>
                Delete
            </button>
        </li>
        <li>
            <button class="button">
                <i class="fa fa-refresh"></i>
                Resume
            </button>
        </li>
    </ul>

    <div></div>

    <ul class="inline">
        <li>
            <button class="button--accent" disabled>
                Next Page
                <i class="fa fa-chevron-right"></i>
            </button>
        </li>
        <li>
            <button class="button--good" disabled>
                <i class="fa fa-edit"></i>
                Edit
            </button>
        </li>
        <li>
            <button class="button--bad" disabled>
                <i class="fa fa-trash-o"></i>
                Delete
            </button>
        </li>
        <li>
            <button class="button" disabled>
                <i class="fa fa-refresh"></i>
                Resume
            </button>
        </li>
    </ul>

    <div class="button-group">
        <button class="button--accent">
            Next Page
            <i class="fa fa-chevron-right"></i>
        </button>
        <button class="button--good">
            <i class="fa fa-edit"></i>
            Edit
        </button>
        <button class="button--bad">
            <i class="fa fa-trash-o"></i>
            Delete
        </button>
        <button class="button">
            <i class="fa fa-refresh"></i>
            Resume
        </button>
    </div>
---
*/


button-background($color, $raise = 5, $reduce = 5)
    background-color $color
    background-image -webkit-linear-gradient(lighten($color, $raise), darken($color, $reduce))
    background-image linear-gradient(lighten($color, $raise), darken($color, $reduce))

button-background-inv($color, $raise = 5, $reduce = 5)
    background-color $color
    background-image -webkit-linear-gradient(darken($color, $reduce), lighten($color, $raise))
    background-image linear-gradient(darken($color, $reduce), lighten($color, $raise))

$base-button
    border 0
    border-radius $border-radius
    padding ($unit / 2) ($unit * 4 / 3)
    margin 0 auto
    display inline-block
    margin $unit 0
    cursor pointer
    transition all 0.2s

    &:focus, &.focus
        outline 0

    &[disabled], &.button--disabled
        background transparent
        cursor not-allowed

.button
button
input[type="button"]
    @extend $base-button

    button-background $base-color(90)
    color $base-color(43)

    &:hover, &:focus, &.hover, &.focus
        color $base-color(20)
        button-background $base-color(95)

    &:active, &.active, &.selected
        button-background-inv $base-color(78)

    &[disabled], &.button--disabled
        color $base-color(78)

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $base-color(78)
            background transparent

button[type="submit"],
.button--accent
    @extend $base-button

    button-background $accent-color(50)
    color $accent-color(99)

    &:hover, &:focus, &.hover, &.focus
        color white
        button-background $accent-color(66)

    &:active, &.active, &.selected
        color $accent-color(95)
        button-background-inv $accent-color(43)

    &[disabled], &.button--disabled
        color $accent-color(78)

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $accent-color(78)
            background transparent

.button--good
    @extend $base-button

    button-background $good-color(90)
    color $good-color(43)

    &:hover, &:focus, &.hover, &.focus
        color $good-color(20)
        button-background $good-color(95)

    &:active, &.active, &.selected
        button-background-inv $good-color(78)

    &[disabled], &.button--disabled
        color $good-color(78)

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $good-color(78)
            background transparent

.button--bad
    @extend $base-button

    button-background $bad-color(90), 3, 2
    color $bad-color(43)

    &:hover, &:focus, &.hover, &.focus
        color $bad-color(20)
        button-background $bad-color(95), 3, 2

    &:active, &.active, &.selected
        button-background-inv $bad-color(78), 3, 2

    &[disabled], &.button--disabled
        color $bad-color(78)

        &:hover, &:focus, &.hover, &.focus, &:active, &.active, &.selected
            color $bad-color(78)
            background transparent

.button-group
    @extend .inline-block
    vertical-align middle

    > *
        float left

        &:first-child:not(:last-child)
            border-top-right-radius 0
            border-bottom-right-radius 0

        &:last-child:not(:first-child)
            border-top-left-radius 0
            border-bottom-left-radius 0

        &:not(:first-child):not(:last-child)
            border-radius 0
