{
  "name": "sagefy-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node ./index.js",
    "test": "concurrently -p \"[{name}]\" --names lint,jest \"yarn run lint\" \"yarn run jest\"",
    "dtest": "docker-compose run server2 yarn test",
    "djest": "docker-compose run server2 yarn jest",
    "dinstall": "docker-compose run server2 yarn",
    "lint": "eslint \"**/*.js\"",
    "precommit": "pretty-quick --staged"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "connect-redis": "3.3.3",
    "cookie-parser": "1.4.3",
    "elasticsearch": "15.1.1",
    "express": "4.16.3",
    "express-async-errors": "3.0.0",
    "express-session": "1.15.6",
    "gravatar": "1.6.0",
    "helmet": "3.13.0",
    "http-status-codes": "1.3.0",
    "joi": "13.5.2",
    "lodash": "4.17.10",
    "morgan": "1.9.0",
    "nodemailer": "4.6.7",
    "pg": "7.4.3",
    "redis": "2.8.0",
    "slugid": "2.0.0"
  },
  "devDependencies": {
    "concurrently": "3.6.0",
    "eslint": "5.1.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.13.0",
    "husky": "0.14.3",
    "jest": "23.4.1",
    "prettier": "1.13.7",
    "pretty-quick": "1.6.0",
    "supertest": "3.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/coverage/**",
      "!/index.js"
    ]
  },
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
