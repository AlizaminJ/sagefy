.preview__kind-label
    @extend $label--accent

.preview--card__content
    > ul
        @extend $ul--unstyled

    small
        color $base-color(50)

    iframe
        margin-top $unit

    img
        max-width 100%
        border-radius $border-radius
        box-shadow $box-shadow-mid

.preview__status--accepted
.preview__available
    @extend $label--good
    margin-right $unit

.preview__language
.preview__status--declined
.preview__status--pending
    @extend $label
    margin-right $unit

.preview__status--blocked
    @extend $label--bad
    margin-right $unit
