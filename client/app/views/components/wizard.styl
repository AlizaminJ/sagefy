.wizard
    margin $unit 0
    padding-left 0
    counter-reset item

    li
        display inline-block
        margin-right $unit
        counter-increment item

        &:before
            content counter(item, decimal) ". "

        &.selected
            background $accent-color(95)
            border-bottom 1px solid $base-color(50)

            &.disabled
                &, a, i
                    border-color transparent
                    color $base-color(90)
