/*
---
title: Menu
description: |
    Sagefy's most common navigational element is a simple menu. The user clicks on the Sagefy icon, and a pane of menu options provides the user with more functionality. This helps to prevent cognitive overload.
---
*/

.menu
    display inline-block
    position fixed

    &.selected
        z-index 2
        top 0
        left 0
        width 100%
        height 100%

        display flex
        justify-content center
        align-items center

.menu--global
    @extend .menu

.menu__overlay
    display block
    background rgba($base-color(20), 0.95)
    width 100%
    height 100%
    position fixed
    top 0
    left 0

.menu__trigger
    position fixed
    display inline-block
    bottom 0
    left 0
    padding ($unit / 2)
    background alpha($base-color(99), 0.8)
    border-bottom 0
    border-top-right-radius 6px

    .selected &
        background transparent

    &:hover .menu__close
        color $base-color(90)

.menu__logo
    $h = $unit * 6
    height $h
    width ($h * 270.0 / 365.0)
    display block
    background-image url('/astrolabe.svg')
    background-size contain

    .selected &
        background-image url('/astrolabe_light.svg')

.menu__close
    position absolute
    top 0
    right 0
    display inline-block
    color $base-color(66)

.menu__items
    @extend $row
    padding $unit
    position relative
    list-style none
    width 100%

    display flex
    justify-content center
    align-items center
    flex-flow row wrap
