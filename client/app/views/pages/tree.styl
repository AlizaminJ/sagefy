#tree
    text-align center

.tree__continue
    @extend $button--accent

// TODO-2 Migrate this all to BEM syntax
.tree
    vertical-align top
    background $base-color(99)
    box-shadow 0 1px 10px rgba(0, 0, 0, 0.2)

    path
    line
        stroke $base-color(80)

    circle
        stroke $base-color(75)
        stroke-width 2px
        fill transparent
        cursor pointer

        &.done
            fill $good-color(60)
            stroke $good-color(20)

        &.learn
        &.review
            stroke $accent-color(65)
            fill $accent-color(97)

        &.blocked
            stroke $bad-color(65)
            fill $bad-color(97)

        &:hover
            filter drop-shadow( 0 0 2px $accent-color(90) )

        &.selected
            filter drop-shadow( 0 0 2px $accent-color(40) )
