{
  "name": "Sagefy",
  "version": "0.0.0",
  "main": "scripts/index.js",
  "directories": {
    "test": "test"
  },
  "description": "Adaptive, collaborative, and open learning platform.",
  "repository": {
    "type": "git",
    "url": "https://github.com/heiskr/sagefy.git"
  },
  "scripts": {
    "start": "concurrently -p \"[{name}]\" --names watch-styles,watch-scripts \"npm run watch-styles\" \"npm run watch-scripts\"",
    "test": "npm run prep-scripts && concurrently -p \"[{name}]\" --names lint-scripts,run-tests \"npm run lint-scripts\" \"npm run run-tests\"",
    "deploy": "concurrently -p \"[{name}]\" --names compress-styles,compress-scripts \"npm run compress-styles\" \"npm run compress-scripts\"",
    "build-styles": "stylus --include-css --use ./tasks/stylus_huslp.js --include ./app/ ./app/index.styl -o ../nginx/statics/index.css",
    "build-styleguide": "node ./tasks/build_styleguide.js",
    "compress-styles": "npm run build-styles && cleancss ../nginx/statics/index.css -o ../nginx/statics/index.css",
    "watch-styles": "stylus --include-css --use ./tasks/stylus_huslp.js --include ./app/ -w ./app/index.styl -o ../nginx/statics/index.css",
    "compile-content": "yaml2json \"../content/\" --recursive --save && mkdir -p ./app/content && mv ../content/*.json ./app/content/",
    "build-scripts": "npm run prep-scripts && webpack ./app/index.js ../nginx/statics/index.js",
    "watch-scripts": "npm run prep-scripts && webpack --watch ./app/index.js ../nginx/statics/index.js -v",
    "compress-scripts": "npm run build-scripts && uglifyjs --compress --mangle --output ../nginx/statics/index.js -- ../nginx/statics/index.js",
    "prep-scripts": "concurrently -p \"[{name}]\" --names build-styleguide,compile-content \"npm run build-styleguide\" \"npm run compile-content\"",
    "lint-scripts": "eslint \"app/**/*.js\" \"tasks/**/*.js\"",
    "run-tests": "mocha -R min \"app/**/*.test.js\" -r ./tasks/test_setup.js",
    "translate-md": "node ./tasks/translate_md.js",
    "run-server": "node ./app/index.server.js"
  },
  "author": "Sagefy",
  "license": "Apache-2.0",
  "dependencies": {
    "cookie-parser": "1.4.3",
    "express": "4.14.0",
    "font-awesome": "4.5.0",
    "normalize.css": "3.0.3",
    "vdom-to-html": "2.3.0",
    "vdom-virtualize": "2.0.0",
    "virtual-dom": "2.1.1"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.5.2",
    "babel-loader": "6.2.7",
    "babel-preset-es2015": "6.16.0",
    "chai": "3.3.0",
    "clean-css": "3.4.20",
    "concurrently": "3.1.0",
    "eslint": "3.7.0",
    "eslint-config-airbnb-base": "8.0.0",
    "eslint-plugin-import": "1.16.0",
    "glob": "5.0.15",
    "husl": "6.0.1",
    "jsdom": "6.5.1",
    "json-loader": "0.5.4",
    "mocha": "2.3.3",
    "raw-loader": "0.5.1",
    "sinon": "1.17.1",
    "sinon-chai": "2.8.0",
    "stylus": "0.52.4",
    "uglify-js": "2.7.4",
    "webpack": "1.13.3",
    "yamljs": "0.2.8"
  }
}
