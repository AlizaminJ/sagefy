{
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  },
  "globals": {
    "expect": true,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "max-depth": ["error", 4],
    "max-lines": ["error", 400],
    "max-params": ["error", 3],
    "max-statements": ["error", 20],
    "no-negated-condition": "error",
    "complexity": ["error", 10],
    "no-useless-call": "error",
    "object-shorthand": ["error", "always"],
    "no-param-reassign": "off",
    "no-nested-ternary": "off",
    "no-loop-func": "off"
  },
  "overrides": [
    {
      "files": ["app/reducers/**/*.js"],
      "rules": {
        "max-statements": "off",
        "complexity": "off"
      }
    },
    {
      "files": ["**/*.test.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    },
    {
      "files": ["tasks/**/*.js"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
