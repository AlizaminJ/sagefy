{
  "name": "sagefy-client",
  "version": "1.0.0",
  "private": false,
  "description": "Learn anything, customized for you. An always free.",
  "license": "Apache-2.0",
  "author": "Kevin Heis and contributors",
  "main": "index.js",
  "repository": "https://github.com/heiskr/sagefy.git",
  "scripts": {
    "build-scripts":
      "yarn run compile-content && webpack ./index.client.js ../nginx/statics/index.js",
    "build-styles":
      "stylus --include-css --use hsluv-stylus --include . ./index.styl -o ../nginx/statics/index.css",
    "precommit": "pretty-quick --staged",
    "compile-content":
      "yaml2json \"../content/\" --recursive --save && mkdir -p ./content && mv ../content/*.json ./content/",
    "compress-scripts":
      "yarn run build-scripts && uglifyjs --compress --mangle --output ../nginx/statics/index.js -- ../nginx/statics/index.js",
    "compress-styles":
      "yarn run build-styles && cleancss ../nginx/statics/index.css -o ../nginx/statics/index.css",
    "deploy":
      "concurrently -p \"[{name}]\" --names compress-styles,compress-scripts \"yarn run compress-styles\" \"yarn run compress-scripts\"",
    "lint": "eslint \"**/*.js\"",
    "start":
      "concurrently -p \"[{name}]\" --names watch-styles,watch-scripts \"yarn run watch-styles\" \"yarn run watch-scripts\"",
    "test":
      "yarn run compile-content && concurrently -p \"[{name}]\" --names lint,jest \"yarn run lint\" \"yarn run jest\"",
    "watch-scripts":
      "yarn run compile-content && webpack --watch ./index.client.js ../nginx/statics/index.js",
    "watch-styles":
      "stylus --include-css --use hsluv-stylus --include . -w ./index.styl -o ../nginx/statics/index.css"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["**/*.js"]
  },
  "dependencies": {
    "cookie-parser": "1.4.3",
    "express": "4.16.3",
    "font-awesome": "4.7.0",
    "jsdom": "11.11.0",
    "lodash.capitalize": "4.2.1",
    "lodash.clone": "4.5.0",
    "lodash.clonedeep": "4.5.0",
    "lodash.compact": "3.0.1",
    "lodash.flattendeep": "4.4.0",
    "lodash.frompairs": "4.0.1",
    "lodash.get": "4.4.2",
    "lodash.isarray": "4.0.0",
    "lodash.isnumber": "3.0.3",
    "lodash.isplainobject": "4.0.6",
    "lodash.mapvalues": "4.6.0",
    "lodash.merge": "4.6.1",
    "lodash.omit": "4.5.0",
    "lodash.snakecase": "4.1.1",
    "lodash.topairs": "4.3.0",
    "lodash.transform": "4.6.0",
    "normalize.css": "8.0.0",
    "redux": "4.0.0",
    "redux-listen": "6.0.1",
    "redux-schemad": "0.2.1",
    "regexparam": "1.0.1",
    "reselect": "3.0.1",
    "timeago.js": "3.0.2",
    "ultradom": "3.3.0"
  },
  "devDependencies": {
    "babel": "6.23.0",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-preset-es2015": "6.24.1",
    "clean-css": "4.1.11",
    "concurrently": "3.5.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "glob": "7.1.2",
    "hsluv-stylus": "0.0.1",
    "husky": "0.14.3",
    "jest": "23.1.0",
    "json-loader": "0.5.7",
    "prettier": "1.13.5",
    "pretty-quick": "1.6.0",
    "raw-loader": "0.5.1",
    "stylus": "0.54.5",
    "uglify-js": "3.4.0",
    "webpack": "4.12.0",
    "yamljs": "0.3.0"
  }
}
