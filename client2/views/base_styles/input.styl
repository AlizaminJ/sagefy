/*
---
title: Inputs
description: Range elements do not use sliders. Instead, ranges are input as two text fields.
---
*/

$box-shadow-input = inset 0 1px 2px $base-color(95), 0 1px 0 white
$box-shadow-input-focus = inset 0 1px 2px $base-color(95), 0 0 1px 1px $base-color(78)


input[type="text"]
input[type="password"]
input[type="number"]
input[type="email"]
input[type="url"]
input[type="time"]
input[type="search"]
input[type="tel"]
textarea
  border 1px solid $base-color(78)
  background white
  border-radius $border-radius
  line-height $unit * 2
  box-shadow $box-shadow-input
  transition box-shadow 0.2s
  max-width 100%

  &:hover, &:focus
    border-color $base-color(66)
    outline 0

  &:focus
    box-shadow $box-shadow-input-focus

  &[disabled]
    background none
    cursor default

    &:hover, &:focus
      border-color $base-color(78)
      box-shadow none

input[type="text"]
input[type="password"]
input[type="number"]
input[type="email"]
input[type="url"]
input[type="time"]
input[type="search"]
input[type="tel"]
  padding ($unit / 2) $unit

textarea
  display block
  // I'm adding display block
  // because otherwise there's an implied "margin"
  // on the element
  padding ($unit / 2) $unit

input[type="checkbox"],
input[type="radio"]
  -webkit-appearance none
  -webkit-user-select none
  background white
  border 1px solid $base-color(78)
  margin 0 1px 0 0
  bottom 2px
  height 13px
  position relative
  vertical-align middle
  width 13px
  box-shadow $box-shadow-input
  cursor pointer

  &:checked
    border 1px solid $accent-color(60)

    &::before
      -webkit-user-select none
      content ''
      display block
      background $accent-color(50)
      border 1px solid white
      width 100%
      height 100%

  &:focus
    outline 0
    box-shadow $box-shadow-input-focus

    &:checked
      box-shadow $box-shadow-input-focus

  &[disabled]
    background none
    box-shadow none

    &:focus
      box-shadow none

input[type="checkbox"]
  border-radius $border-radius

  &:checked::before
    border-radius $border-radius

input[type="radio"]
  border-radius 100%

  &:checked::before
    border-radius 100%
