{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:security/recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "globals": {
    "expect": true,
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-depth": ["error", 4],
    "max-lines": ["error", 400],
    "max-params": ["error", 3],
    "max-statements": ["error", 20],
    "no-negated-condition": "error",
    "complexity": ["error", 10],
    "no-useless-call": "error",
    "object-shorthand": ["error", "always"],

    "jsx-a11y/no-autofocus": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/label-has-associated-control": "off"
  }
}
